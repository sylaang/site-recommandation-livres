        <div class="container">
            <div class="row">
                <div class="col-12 text-center">
                    <a href="{{ path('app_home') }}" class="ajax">
                        <img width="160" height="100" src="{{ asset('img/logo/logo-entreprise.svg') }}" alt="footer logo"
