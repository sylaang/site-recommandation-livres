    <script src="{{ asset('js/nav.js') }}"></script>

    <script>
        $(document).ready(function(){
    // Ajoutez la classe 'active' au lien 'Accueil' au chargement de la page
    $('#accueil-link').addClass('active');

    // Ajoutez la classe 'active' au lien cliqué et retirez-la des autres liens
    $('.nav-item').click(function(){
        $('.nav-item').removeClass('active');
        $(this).addClass('active');
    });
});
    </script>
</body>

</html>